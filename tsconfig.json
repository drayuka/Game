{
    "compilerOptions": {
      "allowJs": false,
      "module": "commonjs",
      "target": "es6",
      "lib": ["es2015"],
      "noImplicitAny": true,
      "sourceMap": false,
      "outDir": "./dist",
      "rootDir": "./src",
      "noEmitOnError": true,
      "allowUnreachableCode": true,
      "strictNullChecks": true,
      "strictFunctionTypes": true,
      "strictPropertyInitialization": false
    },
    "include": [
      "./src/*",
      "./node_modules/@types/**/*.d.ts"
    ]
}
